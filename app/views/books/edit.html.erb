<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
<div id="error_explanation">
<% if @book.errors.count==1%>
  <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
<% elsif @book.errors.count==2%>
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <% end%>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
<% if @book.errors.any? %>
<div class="field">
<div class="field_with_errors">
  <label>Title</label>
  </div>
  <div class="field_with_errors">
  <%= f.text_field :title %>
  </div>
  </div>

<div class="field">
<div class="field_with_errors">
  <label>Body</label>
  </div>
  <div class="field_with_errors">
  <%= f.text_area :body %>
  </div>
  </div>

  <% else%>

  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>
  <%end%>

<div class="actions">
  <%= f.submit 'Update Book' %>
  </div>


<div id="btn">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <a href="/books">Back</a>
  </div>

<% end %>
<%end%>